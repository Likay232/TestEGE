@model WebApi.Infrastructure.Models.Requests.EditUser

@{
ViewBag.Title = "Редактирование пользователя";
Layout = "_AdminLayout";
}

<style>
    form.custom-form {
        max-width: 650px;
        margin: 0 auto;
        padding: 25px;
        background-color: #f9f9f9;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        font-family: sans-serif;
    }

    .custom-form label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
        color: #444;
    }

    .custom-form input,
    .custom-form select,
    .custom-form textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: border-color 0.2s;
    }

    .custom-form input:focus,
    .custom-form textarea:focus,
    .custom-form select:focus {
        border-color: #007bff;
        outline: none;
    }

    .custom-form button {
        padding: 10px 20px;
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        margin-top: 10px;
    }

    .custom-form button:hover {
        background-color: #0056b3;
    }
</style>

<form method="post" class="custom-form">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label for="Email">Email</label>
    <input id="Email" name="Email" type="email" required value="@Model.Email" />

    <label for="Password">Пароль</label>
    <input id="Password" name="Password" required value="@Model.Password" />

    <label for="FirstName">Имя</label>
    <input id="FirstName" name="FirstName" type="text" required value="@Model.FirstName" />

    <label for="LastName">Фамилия</label>
    <input id="LastName" name="LastName" type="text" required value="@Model.LastName" />

    <label for="DateOfBirth">Дата рождения</label>
    <input id="DateOfBirth" name="DateOfBirth" type="date" required value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />

    <label for="TimeZone">Часовой пояс</label>
    <input id="TimeZone" name="TimeZone" type="text" required value="@Model.TimeZone" />

    <label for="RoleName">Роль</label>
    <select id="RoleName" name="RoleName" required>
        <option value="Student" @(Model.RoleName == "Student" ? "selected" : "")>Student</option>
        <option value="Teacher" @(Model.RoleName == "Teacher" ? "selected" : "")>Teacher</option>
    </select>

    <label for="About">О себе</label>
    <textarea id="About" name="About" rows="3">@Model.About</textarea>

    <label for="BlockedUntil">Заблокирован до (если применимо)</label>
    <input id="BlockedUntil" name="BlockedUntil" type="datetime-local" value="@(Model.BlockedUntil?.ToString("yyyy-MM-ddTHH:mm") ?? "")" />

    <button type="submit">Сохранить</button>
</form>

@if (ViewBag.Message != null)
{
    <div style="color: red; font-weight: bold; margin-top: 15px;">
        @ViewBag.Message
    </div>
}

