@{
    Layout = null;
    var title = ViewData["Title"] ?? "Панель преподавателя";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        .layout {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 240px;
            background-color: #1e293b;
            color: #fff;
            padding: 25px 20px;
        }

        .sidebar h2 {
            font-size: 22px;
            margin-bottom: 30px;
            color: #fff;
        }

        .sidebar a {
            display: block;
            color: #cbd5e1;
            text-decoration: none;
            margin: 12px 0;
            padding: 10px 14px;
            border-radius: 6px;
            transition: background-color 0.2s ease;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #334155;
            color: #fff;
        }

        .main {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #fff;
            padding: 15px 25px;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header h1 {
            font-size: 20px;
            margin: 0;
        }

        .user-info {
            font-size: 14px;
            color: #555;
        }

        .content {
            padding: 25px;
            flex-grow: 1;
        }
    </style>
</head>
<body>
<div class="layout">
    <aside class="sidebar">
        <h2>Преподаватель</h2>
        <a href="@Url.Action("Index", "Teacher")">Профиль</a>
        <a href="@Url.Action("ProfileInfo", "Teacher")">Профиль</a>
        <a href="/Teacher/Groups">Группы</a>
        <a href="/Teacher/Exercises">Задания</a>
    </aside>

    <div class="main">
        <header>
            <h1>@title</h1>
            <div class="user-info">👨‍🏫 Вы вошли как преподаватель</div>
        </header>

        <main class="content">
            @RenderBody()
        </main>
    </div>
</div>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
