@model WebApi.Infrastructure.Models.Requests.Register

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8"/>
    <title>Регистрация</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen,
            Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
            background: #f4f7fc;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        form {
            background: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 420px;
            box-sizing: border-box;
        }

        h2 {
            margin-bottom: 24px;
            color: #222;
            font-weight: 600;
            text-align: center;
            letter-spacing: 0.03em;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #444;
            font-size: 14px;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="date"],
        select,
        textarea {
            width: 100%;
            padding: 12px 14px;
            border: 1.8px solid #ccc;
            border-radius: 8px;
            font-size: 15px;
            color: #333;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
            resize: vertical;
            font-family: inherit;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="date"]:focus,
        select:focus,
        textarea:focus {
            border-color: #3f83f8;
            outline: none;
            box-shadow: 0 0 8px rgba(63, 131, 248, 0.25);
        }

        textarea {
            min-height: 80px;
        }

        button {
            margin-top: 25px;
            width: 100%;
            background: #3f83f8;
            color: #fff;
            font-weight: 600;
            padding: 14px 0;
            font-size: 16px;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: background-color 0.25s ease, box-shadow 0.25s ease;
            box-shadow: 0 5px 15px rgba(63, 131, 248, 0.4);
            user-select: none;
        }

        button:hover {
            background: #3366d6;
            box-shadow: 0 8px 20px rgba(51, 102, 214, 0.6);
        }

        .footer {
            margin-top: 18px;
            text-align: center;
            font-size: 14px;
            color: #555;
        }

        .footer a {
            color: #3f83f8;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .footer a:hover {
            color: #3366d6;
            text-decoration: underline;
        }
    </style>
</head>
<body>
<form asp-controller="Auth" asp-action="Register" method="post">
    <h2>Регистрация</h2>

    <label name="Email">Email</label>
    <input name="Email" type="email" id="Email" placeholder="example@mail.com" required/>

    <label name="Password">Пароль</label>
    <input name="Password" type="password" id="Password" placeholder="Введите пароль" required/>

    <label name="ConfirmPassword">Подтверждение пароля</label>
    <input name="ConfirmPassword" type="password" id="ConfirmPassword" placeholder="Повторите пароль" required/>

    <label name="FirstName">Имя</label>
    <input name="FirstName" type="text" id="FirstName" placeholder="Ваше имя" required/>

    <label name="LastName">Фамилия</label>
    <input name="LastName" type="text" id="LastName" placeholder="Ваша фамилия" required/>

    <label name="DateOfBirth">Дата рождения</label>
    <input name="DateOfBirth" type="date" id="DateOfBirth" required max="@DateTime.UtcNow.ToString("yyyy-MM-dd")"/>

    <label name="TimeZone">Часовой пояс</label>
    <select name="TimeZone" id="TimeZone" required>
        <option value="" disabled selected>-- Выберите часовой пояс --</option>
        <option value="UTC-12:00">UTC-12:00</option>
        <option value="UTC-11:00">UTC-11:00</option>
        <option value="UTC-10:00">UTC-10:00</option>
        <option value="UTC-09:00">UTC-09:00</option>
        <option value="UTC-08:00">UTC-08:00</option>
        <option value="UTC-07:00">UTC-07:00</option>
        <option value="UTC-06:00">UTC-06:00</option>
        <option value="UTC-05:00">UTC-05:00</option>
        <option value="UTC-04:00">UTC-04:00</option>
        <option value="UTC-03:00">UTC-03:00</option>
        <option value="UTC-02:00">UTC-02:00</option>
        <option value="UTC-01:00">UTC-01:00</option>
        <option value="UTC+00:00">UTC+00:00 (Лондон)</option>
        <option value="UTC+01:00">UTC+01:00 (Берлин, Париж)</option>
        <option value="UTC+02:00">UTC+02:00 (Калининград, Афины)</option>
        <option value="UTC+03:00">UTC+03:00 (Москва, Стамбул)</option>
        <option value="UTC+04:00">UTC+04:00 (Баку, Дубай)</option>
        <option value="UTC+05:00">UTC+05:00 (Екатеринбург, Ташкент)</option>
        <option value="UTC+06:00">UTC+06:00 (Омск, Алматы)</option>
        <option value="UTC+07:00">UTC+07:00 (Красноярск, Бангкок)</option>
        <option value="UTC+08:00">UTC+08:00 (Иркутск, Пекин)</option>
        <option value="UTC+09:00">UTC+09:00 (Якутск, Токио)</option>
        <option value="UTC+10:00">UTC+10:00 (Владивосток, Сидней)</option>
        <option value="UTC+11:00">UTC+11:00</option>
        <option value="UTC+12:00">UTC+12:00</option>
    </select>

    <label name="Role">Роль</label>
    <select name="Role" id="Role" required>
        <option value="" disabled selected>-- Выберите роль --</option>
        <option value="Student">Учащийся</option>
        <option value="Teacher">Преподаватель</option>
    </select>

    <label name="AboutMe">О себе</label>
    <textarea name="AboutMe" id="AboutMe" placeholder="Расскажите немного о себе..." required></textarea>

    <button type="submit">Зарегистрироваться</button>

    <div class="footer">
        Уже зарегистрированы? <a href="@Url.Action("Login", "Auth")">Войти</a>
    </div>
</form>
</body>
</html>
